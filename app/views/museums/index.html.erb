<div class="container">
  <h1 class="my-2">Find museums nearby</h1>

  <form>
    <div class="form-group">
      <label for="latitudeInput">Latitude</label>
      <input class="form-control" id="latitudeInput" name="lat" placeholder="Enter Latitude" value="<%= @lat %>">
    </div>
    <div class="form-group">
      <label for="longitudeInput">Longitude</label>
      <input class="form-control" id="longitudeInput" name="lng" placeholder="Enter Langitude" value="<%= @lng %>">
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
  </form>

  <div>
    <h3 class="mt-2">Found <%= @museums.count %> Museums</h3>
    <% @postal_codes.each do |postal_code| %>
      <strong><%= postal_code%>:</strong>
      <ul>
      <% @museums.each do |museum| %>
        <% if museum['context'][0]['text'] == postal_code %>
          <li><%= museum['text']%></li>
        <% end %>
      <% end %>
      </ul>
    <% end %>
  </div>
</div>
